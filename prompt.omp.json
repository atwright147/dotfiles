{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "❯ ",
    "foreground": "#5FD700",
    "background": "transparent"
  },
  "console_title_template": "{{ .PWD | dir | base }}/{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "postfix": "\n",
            "prefix": "",
            "text": ""
          },
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "windows": "\ue70f"
          },
          "foreground": "#080808",
          "background": "#CCCCCC",
          "type": "os",
          "style": "powerline"
        },
        {
          "properties": {
            "home_icon": "~",
            "prefix": " \uf07c ",
            "style": "letter"
          },
          "foreground": "#e4e4e4",
          "powerline_symbol": "\ue0b0",
          "background": "#0037DA",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "branch_icon": "\uE0A0 ",
            "branch_ahead_icon": "↑",
            "branch_behind_icon": "↓",
            "display_stash_count": true,
            "display_status": true,
            "display_upstream_icon": true,
            "display_worktree_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "local_changes_color": "#C19C00",
            "status_colors_enabled": true
          },
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#fd981f{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          ],
          "foreground": "#0C0C0C",
          "powerline_symbol": "\ue0b0",
          "background": "#13A10E",
          "type": "git",
          "style": "powerline"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "status",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#00897b",
          "background_templates": ["{{ if .Error }}#e91e63{{ end }}"],
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "template": "{{ if eq .Code 0 }}\uf00c{{ else }} {{ .Code }}{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#8800dd",
          "template": " {{ .FormattedMs }} ",
          "properties": {
            "threshold": 500,
            "style": "austin"
          }
        },
        {
          "properties": {
            "root_icon": "\uf132"
          },
          "foreground": "#C50F1F",
          "powerline_symbol": "\ue0b2",
          "background": "#0C0C0C",
          "type": "root",
          "style": "powerline",
          "invert_powerline": true
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#6CA35E",
          "template": " \ue718 {{ .Full }}{{ if .PackageManagerIcon }} {{ .PackageManagerIcon }}{{ end }} ",
          "properties": {
            "fetch_package_manager": true,
            "npm_icon": "\ue71e",
            "yarn_icon": "\uf61a"
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#306998",
          "template": " \ue235 {{ .Full }}{{ if .Venv }} \uf10c {{ .Venv }}{{ end }} "
        },
        {
          "type": "go",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "#0C0C0C",
          "background": "#7FD5EA",
          "template": " \ue626 {{ .Full }} "
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#5C2D91",
          "template": " \ue77f {{ .Full }} "
        },
        {
          "type": "php",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#4F5D95",
          "template": " \ue608 {{ .Full }} "
        },
        {
          "properties": {
            "postfix": " \uf017 ",
            "time_format": "15:04:05"
          },
          "foreground": "#0C0C0C",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "background": "#CCCCCC",
          "type": "time",
          "style": "powerline"
        },
        {
          "properties": {
            "postfix": "",
            "prefix": "",
            "text": ""
          },
          "type": "text",
          "style": "powerline"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
